{
  "name": "gh-project-bot",
  "version": "1.0.0",
  "private": true,
  "description": "automate project board",
  "author": "dajinchu <dajinchu@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/dajinchu/gh-project-bot.git",
  "homepage": "https://github.com/dajinchu/gh-project-bot",
  "bugs": "https://github.com/dajinchu/gh-project-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@octokit/webhooks": "^7.4.0",
    "lodash": "^4.17.15",
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/lodash": "^4.14.150",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "smee-client": "^1.1.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
